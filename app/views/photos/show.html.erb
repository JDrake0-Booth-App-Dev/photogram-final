<div>
  <div>
    <h1>
      Photo details
    </h1>

    <dl>
      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @the_photo.image %>">
      </dd>
      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= User.where({ :id => @the_photo.owner_id }).at(0).username %>
      </dd>

      <dt>
        Posted
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

      <dt>
        Likes count
      </dt>
      <dd>
        <%= @the_photo.likes_count %>
      </dd>

      <dt>
        Comments count
      </dt>
      <dd>
        <%= @the_photo.comments_count %>
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.updated_at) %> ago
      </dd>

      <dt>
        Fans
      </dt>
      <dd>
        Josh to do this part
      </dd>

      <dt>
        Add a fan
      </dt>
      <dd>
        Josh to do this part
      </dd>

      <div>
      <div>
        <a href="/photos">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_photo/<%= @the_photo.id %>">
          Delete photo
        </a>
      </div>
    </div>
    </dl>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>Comments</h2>

  <table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @the_photo.comments.each do |a_comment| %>
  <tr>
    <td>
      <%= User.where({ :id => a_comment.author_id }).at(0).username %>
    </td>

    <td>
      <%= a_comment.body %>
    </td>

    <td>
      <%= time_ago_in_words(a_comment.created_at) %> ago
    </td>
  </tr>
<% end %>
</table>

<h3>Add a new comment</h3>

<form action="/insert_comment">
  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" name="query_body" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>